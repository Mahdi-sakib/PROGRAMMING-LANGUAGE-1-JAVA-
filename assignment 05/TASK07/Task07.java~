public class Task07
{
  public static void main(String args[])
  {
    int[] x={50, 30, 20, 10, 40};
    
    int c;
   
    boolean flag=true; 
    int temp;
    while(flag)
    {
      
    for(c=0;c<x.length-1;c++)
    {
      flag=false;
      if(x[c]<x[c+1])
      {
        temp=x[c];
        x[c]=x[c+1];
        x[c+1]=temp;
        flag=true;
    }
    }
    }
    for(int i=0;i<x.length;i++)
    {
    System.out.print(" "+x[i]);
  }
  }
}